{
    "compilerOptions": {
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "./src/",
        "module": "esnext",
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "include":[
        "src/core/**/*.ts"
    ],
    "exclude": [
        "src/core/*.d.ts"
    ]
}